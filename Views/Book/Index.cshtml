@model IEnumerable<BookModel>
@{
    ViewData["Title"] = "Index";
}

<div class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3 class="display-4">All Books</h3>
            </div>
            <div class="col-md-6">
                <a asp-action="CreateBook" class="btn btn-primary text-light">Add New Book</a>
            </div>
        </div>
       

        <div class="row">

            @foreach (var item in Model)
            {
            <div class="col-md-4">
                <partial name="_bookThumbnail" model="@item" />
            </div>
            }

               
            </div>
    </div>
</div>

