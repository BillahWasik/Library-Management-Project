@model IEnumerable<BookModel>
@{
    ViewData["Title"] = "Index";
}

<style>
    .card-deck
    {
        width :100%;
        height:100%;
        display: flex;
        justify-content : space-between;
        align-items : center;
        flex-direction : column;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <h2 class="display-4">Book List</h2>
        </div>
        <div class="col-md-5">
            <a asp-action="createbook" class="btn btn-primary text-light float-right">Add New Book</a>
        </div>

         @foreach (var item in Model)
       { 
         <div class="col-md-4">
            <div class="card-deck">
              <div class="card">
                <img src="@item.BookImageUrl" class="card-img-top" alt="...">
                 <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
              <p class="card-text">@item.Description</p>
              <p class="card-text"><a asp-action="details" asp-route-id="@item.Id" class="btn btn-info text-light">View Details</a></p>
                 </div>
              </div>
            </div>
           </div>
       }
        
    </div>
</div>

