
@inject Microsoft.AspNetCore.Identity.SignInManager<CustomizeUser> _db;

@if (_db.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            Hello @User.Identity.Name
        </a>
        <div class="dropdown-menu">
            <a asp-action="Logout" asp-controller="Account" class="dropdown-item">Log Out</a>
        </div>
    </li>

}
else
{
    <div>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a asp-action="SignUp" asp-controller="Account" class="btn btn-success">SignUp</a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-danger">Login</a>
            </li>
        </ul>
    </div>
}


