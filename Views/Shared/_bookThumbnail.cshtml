@model BookModel

<style>
    .card {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-direction: column;
    }
</style>

<div class="card mb-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.BookImageUrl) ? "Image Not found" : Model.BookImageUrl) " class="card-img-top" alt="...">
    <div class="card-body">
        <h3 class="card-title">"@(string.IsNullOrEmpty(Model.Title) ? "Title Not found" : Model.Title) "</h3>
        <p class="card-text">"@(string.IsNullOrEmpty(Model.Description) ? "Description Not found" : Model.Description) "</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-action="details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
            </div>
        </div>
    </div>
</div>